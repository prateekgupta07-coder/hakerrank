#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    int T;
    scanf("%d", &T);
    
    while (T--) {
        int n, k;
        scanf("%d %d", &n, &k);
        
        int *arr = (int *)malloc(n * sizeof(int));
        for (int i = 0; i < n; i++)
            scanf("%d", &arr[i]);
        
        long long count = 0;
        long long prefixSum = 0;
        long long freq[k];
        
        for (int i = 0; i < k; i++)
            freq[i] = 0;
        
        freq[0] = 1;
        
        for (int i = 0; i < n; i++) {
            prefixSum += arr[i];
            int remainder = prefixSum % k;
            if (remainder < 0) remainder += k;
            count += freq[remainder];
            freq[remainder]++;
        }
        
        printf("%lld\n", count);
        free(arr);
    }
    
    return 0;
}
