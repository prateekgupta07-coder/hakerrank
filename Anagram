int anagram(char* s) {
    int n = strlen(s);

    if (n % 2 != 0)
        return -1;

    int freq1[26] = {0}, freq2[26] = {0};
    int half = n / 2;

    for (int i = 0; i < half; i++)
        freq1[s[i] - 'a']++;

    for (int i = half; i < n; i++)
        freq2[s[i] - 'a']++;

    int changes = 0;
    for (int i = 0; i < 26; i++)
        if (freq1[i] > freq2[i])
            changes += freq1[i] - freq2[i];

    return changes;
}
