int substrings(char* n) {
    const long MOD = 1000000007;
    long long total = 0, f = 0;
    int len = strlen(n);

    for (int i = 0; i < len; i++) {
        int num = n[i] - '0';
        f = (f * 10 + (long long)(i + 1) * num) % MOD;
        total = (total + f) % MOD;
    }
    return (int)total;
}
