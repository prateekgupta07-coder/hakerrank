int twoStacks(int maxSum, int a_count, int* a, int b_count, int* b) {
    int sum = 0, i = 0, j = 0, maxCount = 0;
    while (i < a_count && sum + a[i] <= maxSum) {
        sum += a[i];
        i++;
    }
    maxCount = i;
    while (j < b_count) {
        sum += b[j];
        j++;
        while (sum > maxSum && i > 0) {
            i--;
            sum -= a[i];
        }
        if (sum <= maxSum && i + j > maxCount) {
            maxCount = i + j;
        }
    }
    return maxCount;
}
