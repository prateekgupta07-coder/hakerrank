int parse_int(char*);

int pylons(int k, int arr_count, int* arr) {
    int plants = 0;
    int i = 0;

    while (i < arr_count) {
        int right = (i + k - 1 < arr_count - 1) ? (i + k - 1) : (arr_count - 1);
        int left  = (i - k + 1 > 0) ? (i - k + 1) : 0;

        int j = right;
        while (j >= left && arr[j] == 0) {
            j--;
        }

        if (j < left) {
            return -1;
        }

        plants++;
        i = j + k;
    }

    return plants;
}
